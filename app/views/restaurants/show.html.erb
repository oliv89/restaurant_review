
  <div div style = "border:1px solid #586E75; padding:10px; margin-bottom:20px">

    <h2>Restaurant name : <%= @restaurant.name %></h2>
    <h3>Direction : <%= @restaurant.address %></h3>

    <h4>Food style : <%= @restaurant.category %></h4>
    <p> Phone number:  <%= @restaurant.phone_number %></p>

  <div>
    <% @restaurant.reviews.each do |review| %>
      <p>Review:<%= review.content %></p>
      <p>Rating : <%= review.rating %></p>
    <% end %>
  </div>

  <div>
  <%= simple_form_for [@restaurant,@review_restaurant] do |f| %>
    <%= f.error_notification %>

    <%= f.input :content %>
    <%= f.input :rating %>

    <%= f.button :submit %>
  <% end %>
  </div>
   <%= link_to 'Back to all restaurants', restaurants_path %>
</div>

