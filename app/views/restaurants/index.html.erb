<h1>Welcome</h1>
<% @restaurants.each do |restaurant| %>
  <%= link_to restaurant_path(restaurant) do %>
    <div style = "border:1px solid black; padding:15px; margin-bottom:10px">

    <h2>Restaurant name : <%= restaurant.name %></h2>
    <h3>Direction : <%= restaurant.address %></h3>

    <%= link_to "See details & reviews", restaurant_path(restaurant), class: "btn btn-danger"%>

    <%= link_to "Add a review", new_restaurant_review_path(restaurant), class: "btn btn-success" %>
    </div>
  <%end %>
<%end %>

